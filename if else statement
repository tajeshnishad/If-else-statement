a = int(input("enter the number : "))
print(a)
if (a < 0):
    print("value of a is negative")
elif (a == 0):
    print("value of a is 0")
else:
    print("value of a is positive")

a = int(input(" enter ur age "))
print("ur age is ", a)
print(a > 18)
print(a < 18)
print(a >= 18)
print(a <= 18)
print(a == 18)
print(a != 18)
if (a > 18):
    print("u r eligible to drive ")
else:
    print("u r not eligible to drive")
